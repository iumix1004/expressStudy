extends ./layouts/common

block content
    form(action="/users/search", method="GET", class="d-flex mt-5") 
        input(type="text", name="q" class="form-control")
        button(class="btn btn-primary ml-2") Search
    ul
        each user in users
            li 
                span= user.name
                span &nbsp;
                a(href='/users/' + user.id) View
    a(href="/users/add") Add user   